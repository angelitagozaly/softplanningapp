<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_location"
    style="@style/CardViewStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:clickable="true"
    android:focusable="true"
    app:rippleColor="@color/rippleColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <!-- Location Icon -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:text="ðŸ“"
                android:textSize="20sp" />

            <!-- Location Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_location_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Home" />

                <TextView
                    android:id="@+id/text_location_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/textSecondary"
                    android:textSize="14sp"
                    tools:text="123 Main Street, Tokyo, Japan" />

            </LinearLayout>

            <!-- Active Switch -->
            <Switch
                android:id="@+id/switch_location_active"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                tools:checked="true" />

            <!-- Delete Button -->
            <ImageButton
                android:id="@+id/button_delete_location"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Delete location"
                android:src="@drawable/ic_delete_24"
                app:tint="@color/colorError" />

        </LinearLayout>

        <!-- Location Details Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <!-- Coordinates -->
            <TextView
                android:id="@+id/text_location_coordinates"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:fontFamily="monospace"
                android:textColor="@color/textMuted"
                android:textSize="12sp"
                app:drawableStartCompat="@drawable/ic_location_24"
                app:drawableTint="@color/textMuted"
                tools:text="35.676192, 139.650311" />

            <!-- Radius -->
            <TextView
                android:id="@+id/text_location_radius"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:drawablePadding="4dp"
                android:textColor="@color/textMuted"
                android:textSize="12sp"
                app:drawableStartCompat="@drawable/ic_radius_24"
                app:drawableTint="@color/textMuted"
                tools:text="200m radius" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>